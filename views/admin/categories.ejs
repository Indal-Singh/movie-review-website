<h1 class="text-3xl font-bold mb-6 text-gray-800 dark:text-white">Category List</h1>
        
<!-- Table to display categories -->
<table class="min-w-full table-auto text-left border-collapse border border-gray-300">
    <thead class="bg-gray-200 dark:bg-gray-800">
        <tr>
            <th class="py-2 px-4 text-sm font-medium text-gray-900 dark:text-white">ID</th>
            <th class="py-2 px-4 text-sm font-medium text-gray-900 dark:text-white">Category Name</th>
            <th class="py-2 px-4 text-sm font-medium text-gray-900 dark:text-white">Description</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through the categories and display them -->
        <% categories.forEach(category => { %>
            <tr class="border-b border-gray-300 dark:border-gray-700">
                <td class="py-2 px-4 text-sm text-gray-800 dark:text-white"><%= category.id %></td>
                <td class="py-2 px-4 text-sm text-gray-800 dark:text-white"><%= category.name %></td>
                <td class="py-2 px-4 text-sm text-gray-800 dark:text-white"><%= category.description %></td>
            </tr>
        <% }) %>
    </tbody>
</table>