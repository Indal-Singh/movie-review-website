<h1 class="text-2xl font-bold mb-4 dark:text-white">Movies List</h1>
<a class="text-white bg-blue-700 p-2 mb-5 inline-block rounded-md" href="movies/add">Add Category</a>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% movies.forEach(function(movie) { %>
            <div class="bg-white shadow-md rounded-lg p-4">
                <h2 class="text-xl font-bold mb-2"><%= movie.title %></h2>
                <p class="text-gray-700 mb-4"><%= movie.genre %></p>
                <div class="flex justify-between">
                    <a href="/admin/movies/edit/<%= movie.id %>" class="text-blue-500 hover:text-blue-700">Edit</a>
                    <form action="/admin/movies/delete/<%= movie.id %>" method="POST" class="inline">
                        <button type="submit" class="text-red-500 hover:text-red-700">Delete</button>
                    </form>
                </div>
            </div>
            <% }); %>
</div>