<h1 class="text-2xl font-bold mb-4 dark:text-white">Movies List</h1>
<a class="text-white bg-blue-700 p-2 mb-5 inline-block rounded-md" href="movies/add">Add Movie</a>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% movies.forEach(function(movie) { %>
    <div class="bg-white shadow-md rounded-lg p-4 dark:bg-gray-800">
        <img src="/movies/<%= movie.image_path %>" alt="<%= movie.title %> Poster" class="w-full h-48 object-cover rounded-md mb-4">
        <h2 class="text-xl font-bold mb-2 dark:text-white"><%= movie.title %></h2>
        <p class="text-gray-700 dark:text-gray-300 mb-4"><%= movie.cat_name %></p>
        <div class="flex justify-between">
            <a href="/admin-panel/movies/edit/<%= movie.id %>" class="text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-600">Edit</a>
            <form action="/admin-panel/movies/delete/<%= movie.id %>" method="POST" class="inline">
                <button type="submit" class="text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-600">Delete</button>
            </form>
        </div>
    </div>
    <% }); %>
</div>