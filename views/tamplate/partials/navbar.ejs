<header class="w-full mx-auto">
  <div class="header-container max-w-7xl container flex flex-wrap justify-between items-center mx-auto p-4">
    <div class="logo w-full md:w-1/2 mb-4 md:mb-0">
      <a href="/"><img src="/images/logo.png" alt="Logo Here" class="max-w-full h-auto"></a>
    </div>
    <div class="search-container w-full md:w-auto">
      <input type="search" class="border border-gray-300 rounded-full w-full md:w-auto p-2" placeholder="Search...">
    </div>
  </div>
  <nav class="bg-[#408078] text-white border-b-4 border-[#63A844] p-2">
    <div class="max-w-7xl mx-auto">
      <div class="nav-section flex flex-wrap justify-between items-center">
        <div class="nav-left flex flex-wrap">
          <a href="/" class="mr-2 mb-2 md:mb-0">Home</a>
        <% categories.slice(0,5).forEach(category => { %>
          <a href="<%= category.url %>" class="mr-2 mb-2 md:mb-0"><%= category.name %></a>
        <% }); %>
        </div>
        <div class="nav-right flex flex-wrap">
          <!-- <a href="/about" class="mr-2 mb-2 md:mb-0">Home |</a> -->
          <!-- <a href="/contact" class="mr-2 mb-2 md:mb-0">Contact |</a> -->
        </div>
        <button id="hamburger" class="block md:hidden focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
      <div id="mobile-menu" class="hidden md:hidden">
        <a href="/" class="block py-2">Home</a>
        <% categories.forEach(category => { %>
          <a href="<%= category.urt %>" class="mr-2 mb-2 md:mb-0"><%= category.name %></a>
        <% }); %>
      </div>
    </div>
  </nav>
</header>
<script>
  const hamburger = document.getElementById('hamburger');
  const mobileMenu = document.getElementById('mobile-menu');

  hamburger.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>